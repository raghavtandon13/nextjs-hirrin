// prisma/prisma.schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  subtitle  String
  desc      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
